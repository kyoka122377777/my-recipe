<h2>Login</h2>

<%= form_with(url: sessions_path, local: true) do |form| %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :email, 'Email' %>
    <%= form.email_field :email, name: "session[email]", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :password, 'Password' %>
    <%= form.password_field :password, name: "session[password]", required: true %>
  </div>

  <%= form.submit 'Login', class: 'btn btn-primary' %>
<% end %>

