<!DOCTYPE html>
<html>
<head>
  <title><%= t('users.edit.title') %></title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
</head>
<body>
  <main class="container mt-5">
    <h1 class="mb-4"><%= t('users.edit.heading') %></h1>

    <%= form_with model: @user, local: true do |form| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= t('errors.prohibited', count: @user.errors.count) %></h4>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, t('users.edit.name'), class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.label :email, t('users.edit.email'), class: 'form-label' %>
        <%= form.email_field :email, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.label :password, t('users.edit.password'), class: 'form-label' %>
        <%= form.password_field :password, placeholder: t('users.edit.password_placeholder'), class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.label :password_confirmation, t('users.edit.password_confirmation'), class: 'form-label' %>
        <%= form.password_field :password_confirmation, placeholder: t('users.edit.password_confirmation_placeholder'), class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit t('users.edit.submit'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= link_to t('users.edit.cancel'), account_path, class: 'btn btn-secondary' %>
    </div>
  </main>
</body>
</html>
