<% content_for :title, t('users.new.title') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 class="mb-4"><%= t('users.new.title') %></h1>

      <%= form_with model: @user, url: users_path, local: true do |f| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= t('errors.template.header', count: @user.errors.count, model: @user.model_name.human) %></h4>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, t('users.new.name'), class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :email, t('users.new.email'), class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, t('users.new.password'), class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, t('users.new.password_confirmation'), class: 'form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit t('users.new.submit'), class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to t('users.new.login_link'), login_path, class: 'btn btn-link' %>
      </div>
    </div>
  </div>
</div>
