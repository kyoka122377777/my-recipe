<%= content_for :title, "レシピ詳細 | My Recipe" %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= @recipe.title %></h1>

      <p><strong>説明:</strong> <%= @recipe.description %></p>

      <% if @recipe.image.attached? %>
        <div>
          <h4>レシピ画像:</h4>
          <%= image_tag @recipe.image %> <!-- 画像の表示 -->
        </div>
      <% end %>

      <h3>材料:</h3>
      <ul>
        <% @recipe.quantities.each do |quantity| %>
          <li><%= quantity.ingredient_name %>: <%= quantity.amount %></li>
        <% end %>
      </ul>

      <h3>項目:</h3>
      <ul>
        <@recipe.sections.each do |section|>
          <li><%= section.title %></li>
        <% end %>
      </ul>

      <%= link_to '戻る', recipes_path, class: "btn btn-secondary" %> <!-- 戻るリンク -->
    </div>
  </div>
</div>
