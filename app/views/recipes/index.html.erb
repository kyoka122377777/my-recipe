
<div class="container">
  <h1 class="my-4">検索結果</h1>
  <%= form_with url: recipes_path, method: :get, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :query, "検索", class: 'form-label' %>
      <%= form.text_field :query, class: 'form-control', placeholder: 'キーワードを入力...' %>
    </div>
    <%= form.submit "検索", class: "btn btn-primary" %>
  <% end %>

  <% @recipes.each do |recipe| %>
    <div>
      <h2><%= recipe.title %></h2>
      <p><%= recipe.description %></p>
    </div>
  <% end %>
  
</div>
